#!/usr/bin/env bash

echo " ";
echo -n "Waiting for DB to start..."

while ! mysqladmin ping -h"app-db" --silent; do
    sleep 1
    echo -n "."
done
echo "Starting testmine, visit: http://192.168.99.100:3002/ in your browser."
gem install bundler
bundle install
bundle exec rake db:migrate
bundle exec rails s


